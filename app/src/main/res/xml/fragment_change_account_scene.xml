<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/chgEmail"
               motion:framePosition="100"
               android:rotation="-180" />
           <KeyAttribute
               motion:motionTarget="@+id/chgUsername"
               motion:framePosition="100"
               android:rotation="-180" />
           <KeyAttribute
               motion:motionTarget="@+id/chgPassowrd"
               motion:framePosition="100"
               android:rotation="-180" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/imgComplete"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:visibility="invisible"
            motion:layout_constraintBottom_toTopOf="@+id/btnBack"
            motion:layout_constraintVertical_bias="0.8"
            motion:layout_constraintTop_toBottomOf="@+id/btnExist"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="0dp">
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/imgComplete"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:visibility="visible"
            motion:layout_constraintBottom_toTopOf="@+id/btnBack"
            motion:layout_constraintVertical_bias="0.7"
            motion:layout_constraintTop_toBottomOf="@+id/btnExist"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="0dp">
        </Constraint>
    </ConstraintSet>
</MotionScene>